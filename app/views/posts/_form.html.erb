<%= form_with model: @post,data: { turbo: false } ,id: 'new_post', local: true do |f|%>
  <%= render 'shared/error_messages', model: @post %>

  <div class="title">
    <%= f.label :title, "Title" %><br />
    <%= f.text_area :title, class: :form__text, id:"post_title" %>
  </div>

    <%# プレビュー画像 %>
  <div id="previews"></div>

  <div class="click-upload">
    <p>
      クリックしてファイルをアップロード
    </p>
    <%= f.file_field :images, name: 'post[images][]', class: 'post_image', data: {index: 0} %>
  </div>
  <%# プレビュー画像 %>

  <div class="weight-bold-text">
    地域
  </div>
  <%= f.collection_select(:area_id, Area.all, :id, :name, {}, {class:"select-box"}) %>

  <div class="weight-bold-text">
    おすすめ度
  </div>
  <%= f.collection_select(:favorite_id, Favorite.all, :id, :name, {}, {class:"select-box"}) %>

  <div class="weight-bold-text">
    価格
  </div>
  <%= f.collection_select(:price_id, Price.all, :id, :name, {}, {class:"select-box"}) %>
  <span class="post-yen">円</span>

  <div class="field">
    <%= f.label :impression, "感想" %><br />
    <%= f.text_area :impression, class: :form__text, id:"prototype_concept" %>
  </div>



  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>